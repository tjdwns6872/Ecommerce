CREATE TABLE "EC_USER" (
	"EC_USER_NO" NUMBER NOT NULL,
	"EC_USER_PROFILE" NUMBER NULL,
	"EC_USER_NAME" VARCHAR2(50) NOT NULL,
	"EC_USER_NICKNAME" VARCHAR2(20) NOT NULL UNIQUE,
	"EC_USER_BIRTHDATE" DATE NOT NULL,
	"EC_USER_ID" VARCHAR2(256) NULL UNIQUE,
	"EC_USER_PASSWORD" VARCHAR2(4000) NOT NULL,
	"EC_USER_PHONE" VARCHAR2(13) NOT NULL,
	"EC_USER_EMAIL" VARCHAR2(256) NOT NULL,
	"EC_USER_DORMANCY" CHAR(1) DEFAULT 'N' NOT NULL,
    "EC_USER_TYPE" CHAR(1) DEFAULT '0' NOT NULL,
	"EC_USER_RECOMMENDER" NUMBER NULL,
	"EC_CREATION" DATE DEFAULT SYSDATE NOT NULL
);

ALTER TABLE "EC_USER" ADD CONSTRAINT "PK_EC_USER" PRIMARY KEY (
	"EC_USER_NO"
);

COMMENT ON COLUMN "EC_USER"."EC_USER_NO" IS '회원번호';
COMMENT ON COLUMN "EC_USER"."EC_USER_PROFILE" IS '프로필 이미지 번호(파일테이블)';
COMMENT ON COLUMN "EC_USER"."EC_USER_NAME" IS '회원이름';
COMMENT ON COLUMN "EC_USER"."EC_USER_NICKNAME" IS '회원 닉네임';
COMMENT ON COLUMN "EC_USER"."EC_USER_BIRTHDATE" IS '회원생년월일';
COMMENT ON COLUMN "EC_USER"."EC_USER_ID" IS '회원 아이디';
COMMENT ON COLUMN "EC_USER"."EC_USER_PASSWORD" IS '회원 비밀번호';
COMMENT ON COLUMN "EC_USER"."EC_USER_PHONE" IS '회원 전화번호';
COMMENT ON COLUMN "EC_USER"."EC_USER_EMAIL" IS '회원 이메일';
COMMENT ON COLUMN "EC_USER"."EC_USER_DORMANCY" IS '휴면계정여부(Y/N)';
COMMENT ON COLUMN "EC_USER"."EC_USER_TYPE" IS '일반회원(0)/상점회원(1)/운영자(2)';
COMMENT ON COLUMN "EC_USER"."EC_USER_RECOMMENDER" IS '추천인';
COMMENT ON COLUMN "EC_USER"."EC_CREATION" IS '생성일';