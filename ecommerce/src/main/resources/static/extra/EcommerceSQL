CREATE TABLE `ec_users` (
  `ec_users_id` int NOT NULL AUTO_INCREMENT COMMENT '회원 고유 식별번호',
  `ec_users_birth_date` date NOT NULL COMMENT '생년월일',
  `ec_users_created_at` date DEFAULT NULL COMMENT '가입일',
  `ec_users_email` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '회원이메일',
  `ec_users_is_social_login` bit(1) NOT NULL DEFAULT b'0' COMMENT '소셜로그인여부',
  `ec_users_name` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '회원이름',
  `ec_users_password` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '패스워드',
  `ec_users_phone` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '전화번호',
  `ec_users_referral_code` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL COMMENT '추천인코드',
  `ec_users_type` int NOT NULL DEFAULT '0' COMMENT '0:구매/1:판매/2:운영',
  `ec_users_updated_at` date DEFAULT NULL COMMENT '수정일',
  PRIMARY KEY (`ec_users_id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci COMMENT='회원 테이블'


CREATE TABLE `ec_cert` (
  `EC_CERT_ID` int NOT NULL AUTO_INCREMENT COMMENT '고유식별자',
  `EC_CERT_PHONE` varchar(13) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '인증코드를 보낸 전화번호',
  `EC_CERT_CODE` varchar(8) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '인증코드',
  `EC_CERT_CREATED_AT` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '생성일',
  `EC_CERT_DE_FLG` tinyint(1) NOT NULL DEFAULT '0' COMMENT '삭제여부',
  `EC_CERT_CHECK` tinyint(1) NOT NULL DEFAULT '0' COMMENT '인증여부',
  PRIMARY KEY (`EC_CERT_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

CREATE TABLE `ec_categories` (
  `EC_CATEGORIES_ID` int NOT NULL AUTO_INCREMENT COMMENT '카테고리 고유식별자',
  `EC_CATEGORIES_PARENT_ID` int DEFAULT NULL COMMENT '상위 카테고리 아이디',
  `EC_CATEGORIES_NAME` varchar(50) NOT NULL COMMENT '카테고리 이름',
  `EC_CATEGORIES_DESCRIPTION` text COMMENT '카테고리 설명',
  `EC_CATEGORIES_CREATED_AT` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '생성일',
  `EC_CATEGORIES_UPDATED_AT` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '수정일',
  PRIMARY KEY (`EC_CATEGORIES_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci COMMENT='카테고리'

CREATE TABLE `EC_SOCIAL_ACCOUNTS` (
	`EC_SOCIAL_ACCOUNTS_ID`	INT	NOT NULL AUTO_INCREMENT COMMENT '소셜 회원 고유 식별번호',
	`EC_SOCIAL_ACCOUNTS_USER_ID` INT NOT NULL COMMENT '회원 테이블 매핑 번호',
	`EC_SOCIAL_ACCOUNTS_PROVIDER` INT NOT NULL COMMENT '플랫폼(0:Kakao, 1:Naver, 2:Google)',
	`EC_SOCIAL_ACCOUNTS_SOCIAL_EMAIL` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '소셜플랫폼 회원 이메일',
	`EC_SOCIAL_ACCOUNTS_SOCIAL_NAME` varchar(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL COMMENT '소셜 회원이름',
	`EC_SOCIAL_ACCOUNTS_LAST_LOGIN_AT` date DEFAULT NULL COMMENT '마지막 로그인',
	`EC_SOCIAL_ACCOUNTS_CREATED_AT`	date DEFAULT NULL COMMENT '생성일',
	`EC_SOCIAL_ACCOUNTS_UPDATED_AT`	date DEFAULT NULL COMMENT '수정일',
    PRIMARY KEY (`EC_SOCIAL_ACCOUNTS_ID`),
    FOREIGN KEY (`EC_SOCIAL_ACCOUNTS_USER_ID`) REFERENCES ec_users (`ec_users_id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci COMMENT='소셜 회원 테이블';