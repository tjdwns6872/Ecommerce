CREATE TABLE "EC_USER" (
	"EC_USER_NO" NUMBER NOT NULL COMMENT '회원번호',
	"EC_USER_PROFILE" NUMBER NULL COMMENT '프로필 이미지 번호(파일테이블)',
	"EC_USER_NAME" VARCHAR2(50) NOT NULL COMMENT '회원이름',
	"EC_USER_NICKNAME" VARCHAR2(20) NOT NULL UNIQUE COMMENT '회원 닉네임',
	"EC_USER_BIRTHDATE" DATE NOT NULL COMMENT '회원생년월일',
	"EC_USER_ID" VARCHAR2(256) NULL UNIQUE COMMENT '회원 아이디',
	"EC_USER_PASSWORD" LONG NOT NULL COMMENT '회원 비밀번호',
	"EC_USER_PHONE" VARCHAR2(13) NOT NULL COMMENT '회원 전화번호',
	"EC_USER_EMAIL" VARCHAR2(256) NOT NULL COMMENT '회원 이메일',
	"EC_USER_DORMANCY" CHAR(1) NOT NULL DEFAULT 'N' COMMENT '휴면계정여부(Y/N)',
    "EC_USER_TYPE" CHAR(1) NOT NULL DEFAULT '0' COMMENT '일반회원(0)/상점회원(1)/운영자(2)',
	"EC_USER_RECOMMENDER" NUMBER NULL COMMENT '추천인'
	"EC_CREATION" DATE NOT NULL DEFAULT SYSTEM COMMENT '생성일', 
);

ALTER TABLE "EC_USER" ADD CONSTRAINT "PK_EC_USER" PRIMARY KEY (
	"EC_USER_NO"
);